---
import IndexPage from "../..//layouts/IndexPage.astro";
import Blogroll from "../../components/Blogroll.astro";

import  {blogrollList} from "../../consts";
---

<IndexPage frontmatter={{ comment: false, title: "Blogroll" }}>
  <h1 class="text-3xl fa-2x mb-5 mt-10">Blogroll</h1>
  <p class="mb-5">I follow these people, blogs, or newsletters very closely, mostly via RSS where available (or email lists).</p>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 w-full">
    {blogrollList ? blogrollList.sort(
        (a, b) => {
          return a.name.localeCompare(b.name, 'en-US', { numeric: true });
        })
      .map((blog) => <Blogroll {...blog} />) : ""}
  </div>
</IndexPage>
