---
import CommentAside from "./CommentAside.astro";
import {comment} from "../consts";
import {getCollectionByName} from "../utils/getCollectionByName";
import getCountByCategory from "../utils/getCountByCategory";
import {sortPostsByDate} from "../utils/sortPostsByDate";
import {site} from '../consts'
import {t} from '../i18n/utils'
const posts = await getCollectionByName('posts')
let categoryCount = getCountByCategory(posts);
let sortPosts = await sortPostsByDate(posts);
let favorites = sortPosts.filter(post => post.data.favorite);
let resultPosts = favorites.splice(0, site.recentPostsSize);
---

<div>
  <div class="aside-widget mt-10">
    <i class="ri-newspaper-line menu-icon"></i>Mediations Newsletter
  </div>
  <div class="flex flex-col">
    <form name="newsletter-subscription-home" netlify-honeypot="bot-field" netlify>
      <p>
        <p class="mt-5">Timeless insights into humans, software, and leadership.</p>
        <p class="mt-5">Only newsletter you'll need to feel accomplished, live fully, and get your job done.</p>
        <p class="mt-5 mb-5">Every second week. For FREE. That's all you need.</p>

        <label>Email:
          <input
          type="email"
          name="email"
          placeholder="contact@candost.blog"
          class="font-medium rounded-lg text-sm px-5 py-3 mr-2 mb-2 border focus:outline-none dark:focus:ring-primary-blue"
          style="color:black; width: 100%">
        </label>

        <button
        type="submit"
        class="bg-primary-yellow hover:bg-primary-blue focus:ring-4 focus:ring-primary-blue font-medium rounded-lg text-sm px-5 py-3 mr-2 mb-2 dark:bg-primary-yellow dark:hover:bg-primary-green focus:outline-none dark:focus:ring-primary-blue"
        style="color: rgb(62, 51, 85, 1); width: 100%">
        Add me to the list
      </button>
    </p>
  </form>
</div>
</div>
<div>
  <div class="aside-widget mt-10">
    <i class="ri-booklet-line menu-icon"></i> My Best Posts
  </div>
  <div class="flex flex-col">
    {
      resultPosts.map((post) => (
      <a
      href={"/" + post.slug}
      class="truncate cursor-pointr mt-1 hover:text-skin-active"
      title={post.data.title}
      >
      {post.data.title}
    </a>
    ))
  }
</div>
</div>

<div>
  {
    Object.keys(categoryCount).length > 0 && (
    <div class="aside-widget mt-10">
      <i class="ri-folder-line menu-icon"/>{t('sidebar.categories')}
    </div>
    )
  }
  <div class="flex flex-wrap">
    {
      Object.keys(categoryCount).map((category) => (
      <a
      class="my-1 truncate block hover:text-skin-active"
      title={category + " (" + categoryCount[category] + ")"}
      href={"/category/" + category}
      >
      {(category === 'uncategorized' ? t('sidebar.uncategorized') : category) + " (" + categoryCount[category] + ")"}
    </a>
    ))
  }
</div>

<div>
  <div class="aside-widget">
    <i class="ri-booklet-line menu-icon"></i>More About Candost
  </div>
  <div class="flex flex-col">
    <a
    href="/now/"
    class="truncate cursor-pointr mt-1 hover:text-skin-active"
    title=Now
    >Now
  </a>
  <a
  href="/about/"
  class="truncate cursor-pointr mt-1 hover:text-skin-active"
  title=Now
  >About
</a>
<a
href="/friends"
class="truncate cursor-pointr mt-1 hover:text-skin-active"
title=Now
>Follows
</a>
</div>
</div>


